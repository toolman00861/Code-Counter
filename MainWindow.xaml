<Window x:Class="Code_Counter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Code_Counter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400">
            <TextBlock Text="选择文件夹：" FontSize="16" Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FolderPathTextBox" IsReadOnly="True" />
                <Button Grid.Column="1" Content="浏览" Click="BrowseButton_Click" Margin="5,0,0,0" Padding="10,5" />
            </Grid>
            <TextBlock x:Name="FileCountTextBlock" Margin="0,20,0,0" FontSize="14" />
            <TextBlock x:Name="LineCountTextBlock" Margin="0,5,0,0" FontSize="14" />
            <TextBlock x:Name="StatusTextBlock" Text="正在计算..." Margin="0,10,0,0" FontSize="14" Visibility="Hidden" Foreground="Blue" />
        </StackPanel>
    </Grid>
</Window>
